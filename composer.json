{
    "name": "melv/test",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Melv\\Test\\": "core/"
        }
    },
    "authors": [
        {
            "name": "MelvDouc",
            "email": "melv.douc@gmaiL.com"
        }
    ],
    "config": {
        "process-timeout": 0
    },
    "require": {
        "twig/twig": "^3.6"
    },
    "require-dev": {
        "vlucas/phpdotenv": "^5.5"
    },
    "scripts": {
        "dev": "php -S www.dev-server.com:10000 -t public",
        "clear-templates": "rm -rf templates/.cache/*",
        "docker:kill": "docker stop my_container && docker rm my_container",
        "docker:restart": "composer run docker:kill && docker build -t myphptestapp2 . && docker run -d -p 10000:80 --name my_container phptestapp2"
    }
}