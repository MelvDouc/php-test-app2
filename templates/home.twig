{% extends "__base.twig" %}

{% block title %}Home{% endblock %}

{% block main %}
  <h2>Add Person</h2>

  <form action="/" method="POST">
    <div class="container">
      <section class="row mb-3">
        <div class="col-6">
          <label for="firstName" class="form-label">First Name</label>
          <input class="form-control" type="text" id="firstName" name="firstName" />
        </div>
        <div class="col-6">
          <label for="lastName" class="form-label">Last Name</label>
          <input class="form-control" type="text" id="lastName" name="lastName" />
        </div>
      </section>
      <section class="row mb-3">
        <div class="col-6">
          <label for="street" class="form-label">Street</label>
          <input class="form-control" type="text" id="street" name="street" />
        </div>
        <div class="col-6">
          <label class="form-label" for="cityId">City</label>
          <select class="form-select" name="cityId" id="cityId">
            <option disabled selected>----</option>
            {% for city in cities %}
              <option value="{{ city.id }}">{{ city.name }} ({{ city.country }})</option>
            {% endfor %}
          </select>
        </div>
      </section>
      <section class="row mb-3">
        <div class="col-12">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="isMale" id="isMale" />
            <label class="form-check-label" for="isMale">Male</label>
          </div>
        </div>
      </section>
      <section class="row">
        <div class="col-12">
          <button class="btn btn-primary" type="submit">Submit</button>
        </div>
      </section>
    </div>
  </form>
{% endblock %}